                    span Балтика
                span  -
                    = ' '
                .games__teams-item.js-teams-popup
                    .games__img-box
                        img(src='./images/teams/team_2-sm.png' alt='')
                    span Красные Крылья
            .games__text 21:20 (Группа А)

mixin game-default()
    .games.games--default.js-show-more-games
        .games__wrap
            span Показать
                br
                |  еще

mixin calendar-column-item(isDefault)
    .b-calendar__cell-scroll
        .b-calendar__cell-inner
            +game
            +game-payload(true, true, true)
            +game-payload(true, true)
            -if(isDefault)
                +game-default


mixin player(isDefault)
    .player
        .player__avatar
            -if(isDefault)
                img(src='./images/icon-player-default.png' alt='')
            -else
