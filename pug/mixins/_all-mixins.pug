mixin b-table--season()
    .b-table
        .b-table__title-time 11 мая, пн
        +b-table-item--season
        +b-table-item--season

mixin b-table-item--season()
    .b-table__item
        div 21:10
        div
            p.js-teams-popup
                span
                    img(src='./images/teams/team_1-lg.png' alt='')
                | Балтика -
            p.js-teams-popup
                span
                    img(src='./images/teams/team_2-lg.png' alt='')
                | Красные Крылья
        div
            .b-table__item-icons
                a(href='').b-table__item-icon.b-table__item-icon--video
                a(href='').b-table__item-icon.b-table__item-icon--docs

        div
            p.js-statistic-popup 5 : 0
        div Завершен

