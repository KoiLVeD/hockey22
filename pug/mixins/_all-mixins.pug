mixin b-table-item--home(isDefault)
    .b-table__item
        div 21:10
        div
            p.js-teams-popup
                span
                    -if(isDefault)
                        img(src='./images/teams/team-default.png' alt='')
                    -else
                        img(src='./images/teams/team_1-lg.png' alt='')
                | Балтика -
            p.js-teams-popup
                span
                    img(src='./images/teams/team_2-lg.png' alt='')
                | Красные Крылья
        div 1п (0:0)
        div 2п (0:0)
        div 3п (0:0)
        div Счет 0 : 0
        div Группа А

mixin game-payload(isCount, isVideo, isDocs)
    .games.games--payload
        .games__wrap
            .games__text 2 сен, пн
            .games__teams
                .games__teams-item.js-teams-popup
                    .games__img-box
                        img(src='./images/teams/team_1-sm.png' alt='')
                    span Балтика
                span  -
                    = ' '
                .games__teams-item.js-teams-popup
                    .games__img-box
                        img(src='./images/teams/team_2-sm.png' alt='')
                    span Красные Крылья
            .games__text 21:20 (Группа А)
            .games__payload
                -if(isCount)
                    .games__account 2:1
                -if(isVideo)
                    .games__ico.games__ico--video
                -if(isDocs)
                    .games__ico.games__ico--docs

mixin game-count()
    .games.games--short
        .games__wrap
            .games__text 2 сен, пн
            .games__teams
                .games__teams-item.js-teams-popup
                    .games__img-box
                        img(src='./images/teams/team_1-sm.png' alt='')
                    span БАЛТ
                .games__teams-count 3:1
                .games__teams-item.js-teams-popup
                    .games__img-box
                        img(src='./images/teams/team_2-sm.png' alt='')
                    span КРАС
            .games__text 21:20 (Группа А)

