extends _layout-black-header

block title
    title Кубок города ЛХЛ 2019
block content
    .news-page
        .container
            .b-breadcrumbs
                .b-breadcrumbs__item
                    a(href='') Главная
                .b-breadcrumbs__item
                    a(href='') Предыдущие сезоны
                .b-breadcrumbs__item
                    span Кубок города ЛХЛ 2019
            h1 Кубок города ЛХЛ 2019
            .row
                main.col-lg-12
                    .b-main-box
                        .b-season-detail
                            .b-season-detail__aside
                                .b-season-detail__note
                                    b Внимание!
                                    p Финальный матч кубка города состоится 11.04.2019 в 19:00 на льду "Карандин-Арены", по окночанию финального матча пройдет торжественное награждение участников Чемпионата города во всех группах
                                .b-season-detail__btn
                                    .btn.btn--yellow Показать турнирную сетку
                                    .btn.btn--blue Календарь матчей
                                .b-season-detail__section
                                    h2 Состав дивизионов
                                    ol
                                        li Синтез
                                        li Алтайские волки
                                        li Титан
                                        li Целинник
                                        li Свирепые ежи
                                        li Ястребы-2
                                        li Легион
                                        li Ястребы
                                        li Скиф
                                        li Балтика
                                        li Прайд
                                        li Павловск
                                        li SportLife
                                        li Неудержимые
                                    span С командами своего дивизиона играют дважды, а с соперниками из другого по одной игре.



                                .b-season-detail__section
                                    h2 Документы
                                    ul
                                        li
                                            a(href='') Регламент чемпионата города группы "C","D" и "E" Сезон 2019 - 2020 гг.
                                        li
                                            a(href='') Форма завяки команды на Сезон 2019 - 2020 гг.
                                        li
                                            a(href='') Согласие на обработку персональных данных

                            .b-season-detail__main
                                h2 Расписание матчей
                                .tab.tab--radio
                                    .tab__scroll
                                        .tab__wrap
                                            input(id='p-1' type='radio' name='group_1' checked)
                                            label(for='p-1').tab__item Предварительный раунд
                                            input(id='p-2' type='radio' name='group_1')
                                            label(for='p-2').tab__item 1/4
                                            input(id='p-3' type='radio' name='group_1')
                                            label(for='p-3').tab__item Полуфинал
                                            input(id='p-4' type='radio' name='group_1')
                                            label(for='p-4').tab__item Матч за 3-е место
                                            input(id='p-5' type='radio' name='group_1')
                                            label(for='p-5').tab__item Финал

                                .b-season-detail__tables
                                    .b-table
                                        .b-table__title-time 11 мая, пн
                                        .b-table__item
                                            div 21:10
                                            div
                                                p
                                                    span
                                                        img(src='./images/teams/team_1-lg.png' alt='')
                                                    | Балтика -
                                                p
                                                    span
                                                        img(src='./images/teams/team_2-lg.png' alt='')
                                                    | Красные Крылья
                                            div
                                                .b-table__item-icon.b-table__item-icon--video
                                                .b-table__item-icon.b-table__item-icon--docs
                                            div 5 : 0
                                            div Завершен
                                    .b-table
                                        .b-table__title-time 11 мая, пн
