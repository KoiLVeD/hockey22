                                        input(id='p-2' type='radio' name='group_1')
                                        label(for='p-2').tab__item A
                                        input(id='p-3' type='radio' name='group_1')
                                        label(for='p-3').tab__item B
                                        input(id='p-4' type='radio' name='group_1')
                                        label(for='p-4').tab__item C
                                        input(id='p-5' type='radio' name='group_1')
                                        label(for='p-5').tab__item D


                            .b-main-box__list
                                .b-table
                                    .b-table__title-time 2 сен, пн
                                    .b-table__item
