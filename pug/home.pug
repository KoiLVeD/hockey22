        .home-page__content
            .container
                .row
                    main.col-lg-8
                        .b-main-box
                            h2 Матчи
                            .b-main-box__control.js-tab
                                .tab.js-tab-item
                                    .tab__item.tab__item--active Ближайшие
                                    .tab__item Прошедшие
                                .tab.tab--radio
                                    .tab__title Группа:
                                    .tab__wrap
                                        input(id='p-1' type='radio' name='group_1' checked)
